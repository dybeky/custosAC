<UserControl x:Class="CustosAC.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Settings"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Configure custosAC preferences"
                       Style="{StaticResource SubtitleStyle}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Updates Section -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Updates"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <!-- Check updates on startup -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Check for updates on startup"
                                           FontSize="15"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Automatically check for new versions when the app starts"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MinimalToggleStyle}"
                                          IsChecked="{Binding CheckUpdatesOnStartup}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Auto download updates -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Auto-download updates"
                                           FontSize="15"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Automatically download updates when available"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MinimalToggleStyle}"
                                          IsChecked="{Binding AutoDownloadUpdates}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Manual check button -->
                        <Button Content="CHECK FOR UPDATES"
                                Command="{Binding CheckForUpdatesCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="About"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Version:"
                                       Style="{StaticResource SubtitleStyle}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentVersion, StringFormat='v{0}'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Developer:"
                                       Style="{StaticResource SubtitleStyle}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="COBRA"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>

                        <Button Content="VIEW ON GITHUB"
                                Command="{Binding OpenGitHubCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Danger Zone -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="12" Padding="20"
                        BorderBrush="{StaticResource ErrorBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Danger Zone"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ErrorBrush}"
                                   Margin="0,0,0,15"/>

                        <!-- Delete after use -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Delete program after use"
                                           FontSize="15"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Automatically delete custosAC when you close it"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MinimalToggleStyle}"
                                          IsChecked="{Binding DeleteAfterUse}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <Button Content="DELETE PROGRAM NOW"
                                Command="{Binding DeleteProgramCommand}"
                                Style="{StaticResource CancelButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Back Button -->
        <Button Grid.Row="2"
                Content="BACK"
                Command="{Binding GoBackCommand}"
                Style="{StaticResource OutlinedButtonStyle}"
                HorizontalAlignment="Left"
                Margin="0,20,0,0"/>
    </Grid>
</UserControl>
