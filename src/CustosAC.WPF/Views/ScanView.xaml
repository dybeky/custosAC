<UserControl x:Class="CustosAC.WPF.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid>
        <!-- Ready to Scan State -->
        <Grid Visibility="{Binding IsReadyToScan, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Radar Icon with soft pulse and glow -->
                <Grid Width="140" Height="140" Margin="0,0,0,30">
                    <!-- Soft glow background -->
                    <Ellipse Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#20FF6B00" Offset="0"/>
                                <GradientStop Color="#00FF6B00" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.3" To="0.8" Duration="0:0:2.5"
                                                         AutoReverse="True">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Main circle -->
                    <Border Width="120" Height="120" CornerRadius="60"
                            Background="{StaticResource SurfaceBrush}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF6B00" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <materialDesign:PackIcon x:Name="readyRadarIcon" Kind="Radar"
                                                 Width="55" Height="55"
                                                 Foreground="{StaticResource SecondaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center">
                            <materialDesign:PackIcon.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0.7" To="1" Duration="0:0:2"
                                                             AutoReverse="True">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </materialDesign:PackIcon.Triggers>
                        </materialDesign:PackIcon>
                    </Border>
                </Grid>

                <!-- Title -->
                <TextBlock Text="{Binding Localization.Strings.Scan}"
                           FontSize="32" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Description -->
                <TextBlock Text="{Binding Localization.Strings.ScanDescription}"
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalAlignment="Center" Margin="0,0,0,10"
                           TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400"/>

                <!-- Scanner count -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock Text="{Binding TotalScanners}"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBlock Text=" "
                               FontSize="14"
                               Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBlock Text="{Binding Localization.Strings.ScannersReady}"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryBrush}"/>
                </StackPanel>

                <!-- Start Button -->
                <Button Content="{Binding Localization.Strings.StartScan}"
                        Command="{Binding StartScanCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="200"/>
            </StackPanel>
        </Grid>

        <!-- Scanning State - Modern Spinner -->
        <Grid Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Multi-layer Spinning Animation -->
                <Grid Width="180" Height="180" Margin="0,0,0,40">

                    <!-- Outer glow pulse -->
                    <Ellipse Width="180" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#30FF6B00" Offset="0.3"/>
                                <GradientStop Color="#00FF6B00" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0.4" To="1" Duration="0:0:1.5"
                                                         AutoReverse="True">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Outer ring - static track -->
                    <Ellipse Width="160" Height="160" StrokeThickness="2"
                             Stroke="#252525" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- Outer ring - spinning gradient -->
                    <Ellipse Width="160" Height="160" StrokeThickness="3"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             StrokeDashArray="1 2"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF6B00" Offset="0"/>
                                <GradientStop Color="#FF8C00" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="OuterRingRotate"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="OuterRingRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:4">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Middle ring - counter rotation -->
                    <Ellipse Width="130" Height="130" StrokeThickness="2"
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             StrokeDashArray="3 5"
                             RenderTransformOrigin="0.5,0.5">
                        <Ellipse.Stroke>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="#FF6B00" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="MiddleRingRotate"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="MiddleRingRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="360" To="0" Duration="0:0:3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Inner circle background -->
                    <Border Width="100" Height="100" CornerRadius="50"
                            Background="{StaticResource SurfaceBrush}"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF6B00" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                        </Border.Effect>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                         From="0.3" To="0.7" Duration="0:0:1.2"
                                                         AutoReverse="True">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>

                    <!-- Radar icon with rotation -->
                    <materialDesign:PackIcon Kind="Radar" Width="45" Height="45"
                                             Foreground="{StaticResource SecondaryBrush}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             RenderTransformOrigin="0.5,0.5">
                        <materialDesign:PackIcon.RenderTransform>
                            <RotateTransform x:Name="RadarIconRotate"/>
                        </materialDesign:PackIcon.RenderTransform>
                        <materialDesign:PackIcon.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="RadarIconRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:2.5">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </materialDesign:PackIcon.Triggers>
                    </materialDesign:PackIcon>
                </Grid>

                <!-- Scanning Text with smooth fade -->
                <TextBlock Text="{Binding Localization.Strings.Scanning}"
                           FontSize="26" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0.6" Duration="0:0:1.8"
                                                     AutoReverse="True">
                                        <DoubleAnimation.EasingFunction>
                                            <CubicEase EasingMode="EaseInOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <!-- Subtitle -->
                <TextBlock Text="{Binding Localization.Strings.ScanningSubtitle}"
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalAlignment="Center" Margin="0,12,0,45"
                           Opacity="0.8"/>

                <!-- Cancel Button -->
                <Button Content="{Binding Localization.Strings.CancelScan}"
                        Command="{Binding CancelScanCommand}"
                        Style="{StaticResource CancelButtonStyle}"
                        Width="160"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
