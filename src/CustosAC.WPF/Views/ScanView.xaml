<UserControl x:Class="CustosAC.WPF.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid>
        <!-- Ready to Scan State -->
        <Grid Visibility="{Binding IsReadyToScan, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Radar Icon with soft pulse -->
                <Border Width="120" Height="120" CornerRadius="60"
                        Background="{StaticResource SurfaceBrush}"
                        HorizontalAlignment="Center" Margin="0,0,0,30">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="readyRadarIcon"
                                                     Storyboard.TargetProperty="Opacity"
                                                     From="0.6" To="1" Duration="0:0:2"
                                                     AutoReverse="True">
                                        <DoubleAnimation.EasingFunction>
                                            <SineEase EasingMode="EaseInOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    <materialDesign:PackIcon x:Name="readyRadarIcon" Kind="Radar"
                                             Width="60" Height="60"
                                             Foreground="{StaticResource SecondaryBrush}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Pow pow"
                           FontSize="32" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Description -->
                <TextBlock Text="Scan AppData, Registry, Processes, Prefetch, Steam and more"
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalAlignment="Center" Margin="0,0,0,10"
                           TextWrapping="Wrap" TextAlignment="Center" MaxWidth="400"/>

                <!-- Scanner count -->
                <TextBlock Text="9 scanners ready"
                           FontSize="14"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <!-- Start Button -->
                <Button Content="START SCAN"
                        Command="{Binding StartScanCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="200"/>
            </StackPanel>
        </Grid>

        <!-- Scanning State -->
        <Grid Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Animated Header -->
            <StackPanel Grid.Row="0" Margin="0,20,0,30" HorizontalAlignment="Center">
                <!-- Spinning Radar Icon -->
                <Border Width="80" Height="80" CornerRadius="40"
                        Background="{StaticResource SurfaceBrush}"
                        HorizontalAlignment="Center" Margin="0,0,0,20">
                    <materialDesign:PackIcon Kind="Radar" Width="40" Height="40"
                                             Foreground="{StaticResource SecondaryBrush}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             RenderTransformOrigin="0.5,0.5">
                        <materialDesign:PackIcon.RenderTransform>
                            <RotateTransform x:Name="RadarRotate"/>
                        </materialDesign:PackIcon.RenderTransform>
                        <materialDesign:PackIcon.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="RadarRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:3">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </materialDesign:PackIcon.Triggers>
                    </materialDesign:PackIcon>
                </Border>

                <TextBlock Text="SCANNING..."
                           Style="{StaticResource TitleStyle}"
                           HorizontalAlignment="Center">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="1" To="0.6" Duration="0:0:1.2"
                                                     AutoReverse="True">
                                        <DoubleAnimation.EasingFunction>
                                            <SineEase EasingMode="EaseInOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <TextBlock Text="{Binding CurrentScannerName}"
                           FontSize="16"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Progress Section -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12" Margin="40,0" Padding="30,20">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Progress: "
                                       Style="{StaticResource SubtitleStyle}"/>
                            <TextBlock Text="{Binding OverallProgress, StringFormat='{}{0}%'}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" Text="{Binding ElapsedTime}"
                                   Style="{StaticResource SubtitleStyle}"/>
                    </Grid>

                    <!-- Animated Progress Bar -->
                    <Border Height="12" CornerRadius="6" Background="#252525">
                        <Border CornerRadius="6" HorizontalAlignment="Left"
                                Width="{Binding OverallProgress, Converter={StaticResource ProgressToWidthConverter}}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF6B00" Offset="0"/>
                                    <GradientStop Color="#FF8C00" Offset="0.5"/>
                                    <GradientStop Color="#FF6B00" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0.85" To="1" Duration="0:0:0.8"
                                                             AutoReverse="True">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Scanner List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="40,20,40,0">
                <ItemsControl ItemsSource="{Binding Scanners}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SurfaceBrush}"
                                    CornerRadius="8" Padding="15" Margin="0,0,0,8"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <Border Grid.Column="0" Width="36" Height="36"
                                            CornerRadius="18" Margin="0,0,15,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#252525"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <materialDesign:PackIcon Width="20" Height="20"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="CircleOutline"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Kind" Value="Radar"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                                            <Setter Property="Kind" Value="Check"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Border>

                                    <!-- Name -->
                                    <TextBlock Grid.Column="1" Text="{Binding Name}"
                                               FontSize="15" FontWeight="Medium"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               VerticalAlignment="Center"/>

                                    <!-- Status -->
                                    <TextBlock Grid.Column="2" Text="{Binding Status}"
                                               Style="{StaticResource SubtitleStyle}"
                                               VerticalAlignment="Center" Margin="0,0,20,0"/>

                                    <!-- Findings Badge -->
                                    <Border Grid.Column="3" CornerRadius="12" Padding="10,4"
                                            Background="{StaticResource ErrorBrush}"
                                            Visibility="{Binding FindingsCount, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="{Binding FindingsCount}"
                                                   FontWeight="Bold" Foreground="White" FontSize="12"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Cancel Button -->
            <Button Grid.Row="3" Content="CANCEL SCAN"
                    Command="{Binding CancelScanCommand}"
                    Style="{StaticResource CancelButtonStyle}"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20"/>
        </Grid>
    </Grid>
</UserControl>
