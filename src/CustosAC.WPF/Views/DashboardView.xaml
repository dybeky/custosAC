<UserControl x:Class="CustosAC.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="{Binding Localization.Strings.Welcome}"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="custosAC - cheat scanner"
                       Style="{StaticResource SubtitleStyle}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Two Boxes -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Info Box -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24"
                                                 Foreground="{StaticResource SecondaryBrush}"
                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Localization.Strings.Info}"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <!-- Logo -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                            <TextBlock Text="custos" FontSize="36" FontWeight="Bold"
                                       Foreground="White"
                                       FontFamily="{StaticResource MuseoSansBold}"/>
                            <TextBlock Text="AC" FontSize="36" FontWeight="Bold"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontFamily="{StaticResource MuseoSansBold}"/>
                        </StackPanel>

                        <TextBlock Text="{Binding Localization.Strings.WelcomeMessage}"
                                   FontSize="15"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   LineHeight="24"
                                   MaxWidth="300"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Footer -->
                    <TextBlock Grid.Row="2" Text="{Binding Localization.Strings.ForCobraServers}"
                               Style="{StaticResource SubtitleStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </Grid>
            </Border>

            <!-- Changelog Box -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="NoteTextOutline" Width="24" Height="24"
                                                     Foreground="{StaticResource SecondaryBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Localization.Strings.Changelog}"
                                       FontSize="18" FontWeight="SemiBold"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Version Badge - only show if ReleaseVersion is not empty -->
                        <Border Grid.Column="1" CornerRadius="10" Padding="10,4"
                                Background="{StaticResource SecondaryBrush}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReleaseVersion}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ReleaseVersion}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding ReleaseVersion}"
                                       FontWeight="Bold" Foreground="White" FontSize="12"/>
                        </Border>
                    </Grid>

                    <!-- Loading State -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding IsLoadingChangelog, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="Loading" Width="32" Height="32"
                                                 Foreground="{StaticResource SecondaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 RenderTransformOrigin="0.5,0.5">
                            <materialDesign:PackIcon.RenderTransform>
                                <RotateTransform x:Name="ChangelogSpinner"/>
                            </materialDesign:PackIcon.RenderTransform>
                            <materialDesign:PackIcon.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="ChangelogSpinner"
                                                             Storyboard.TargetProperty="Angle"
                                                             From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </materialDesign:PackIcon.Triggers>
                        </materialDesign:PackIcon>
                        <TextBlock Text="{Binding Localization.Strings.Loading}"
                                   Style="{StaticResource SubtitleStyle}"
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Changelog Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding IsLoadingChangelog, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <StackPanel>
                            <!-- Release Date -->
                            <TextBlock Text="{Binding ReleaseDate, StringFormat='Released: {0}'}"
                                       Style="{StaticResource SubtitleStyle}"
                                       FontSize="12"
                                       Margin="0,0,0,15"
                                       Visibility="{Binding ReleaseDate, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Changelog Text -->
                            <TextBlock Text="{Binding Changelog}"
                                       FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       LineHeight="22"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
