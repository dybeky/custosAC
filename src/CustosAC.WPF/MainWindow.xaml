<Window x:Class="CustosAC.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:CustosAC.WPF.ViewModels"
        mc:Ignorable="d"
        Title="custosAC"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{StaticResource MuseoSans}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Grid>
        <!-- Main Content Container (will be blurred when overlay is shown) -->
        <Grid x:Name="MainContentContainer">
            <!-- BlurEffect must be defined on the element, not in trigger Setter, to prevent NullReferenceException during exit animation -->
            <Grid.Effect>
                <BlurEffect Radius="0"/>
            </Grid.Effect>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowUpdateOverlay}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)"
                                                         To="15" Duration="0:0:0.3">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(BlurEffect.Radius)"
                                                         To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Loading Overlay (covers all rows) -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Panel.ZIndex="100"
              Background="{StaticResource BackgroundBrush}"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Spinning Circle -->
                <materialDesign:PackIcon Kind="Loading" Width="60" Height="60"
                                         Foreground="{StaticResource SecondaryBrush}"
                                         HorizontalAlignment="Center"
                                         RenderTransformOrigin="0.5,0.5">
                    <materialDesign:PackIcon.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate"/>
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </materialDesign:PackIcon.Triggers>
                </materialDesign:PackIcon>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock Text="custos" FontSize="32" FontWeight="Bold"
                               Foreground="White"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text="AC" FontSize="32" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                </StackPanel>

                <TextBlock Text="Loading..."
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="custos" FontSize="26" FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text="AC" FontSize="26" FontWeight="Bold"
                               Foreground="{StaticResource SecondaryBrush}"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text=" - cheat scanner" FontSize="14" FontWeight="Normal"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Time only -->
                <TextBlock Grid.Column="2" Text="{Binding CurrentTime}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content with Sidebar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                    <!-- Home/Dashboard -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToDashboardCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dashboard}"
                            ToolTip="Home">
                        <materialDesign:PackIcon Kind="Home" Width="24" Height="24"/>
                    </Button>

                    <!-- Manual Check -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToManualCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Manual}"
                            ToolTip="Manual Check">
                        <materialDesign:PackIcon Kind="Eye" Width="24" Height="24"/>
                    </Button>

                    <!-- Scan (also selected when showing Results) -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToScanCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Scan|Results'}"
                            ToolTip="Scan">
                        <materialDesign:PackIcon Kind="Radar" Width="24" Height="24"/>
                    </Button>

                    <!-- Utilities -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToUtilitiesCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Utilities}"
                            ToolTip="Utilities">
                        <materialDesign:PackIcon Kind="Toolbox" Width="24" Height="24"/>
                    </Button>

                    <!-- Separator -->
                    <Border Height="1" Background="#333333" Margin="10,15"/>

                    <!-- Settings -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToSettingsCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Settings}"
                            ToolTip="Settings">
                        <materialDesign:PackIcon Kind="Cog" Width="24" Height="24"/>
                    </Button>

                    <!-- Update Check -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding CheckUpdateCommand}"
                            ToolTip="Check Updates"
                            IsEnabled="{Binding IsCheckingUpdate, Converter={StaticResource InverseBooleanConverter}}">
                        <Grid>
                            <!-- Normal icon -->
                            <materialDesign:PackIcon Kind="Update" Width="24" Height="24"
                                                     Visibility="{Binding IsCheckingUpdate, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            <!-- Spinning icon when checking -->
                            <materialDesign:PackIcon Kind="Loading" Width="24" Height="24"
                                                     Visibility="{Binding IsCheckingUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     RenderTransformOrigin="0.5,0.5">
                                <materialDesign:PackIcon.RenderTransform>
                                    <RotateTransform x:Name="UpdateSpinnerRotate"/>
                                </materialDesign:PackIcon.RenderTransform>
                                <materialDesign:PackIcon.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="UpdateSpinnerRotate"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </materialDesign:PackIcon.Triggers>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

                <!-- Content Area with fade transition -->
                <ContentControl Grid.Column="1"
                                Content="{Binding CurrentView, NotifyOnTargetUpdated=True}"
                                Margin="20"
                                x:Name="MainContentControl"/>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="20,10">
                <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <Run Text="custosAC "/>
                    <Run Text="{Binding DisplayVersion}"/>
                </TextBlock>
            </Border>
        </Grid>

        <!-- Update Overlay (no blur on dialog itself) -->
        <Grid x:Name="UpdateOverlay" Grid.RowSpan="3" Panel.ZIndex="200"
              Visibility="Collapsed">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowUpdateOverlay}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Name="OverlayShowStoryboard">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Smooth fade-out animation for overlay background -->
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Collapse AFTER animation completes -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Blurred/Darkened Background -->
            <Border Background="#CC000000"/>

            <!-- Update Available Card (when NOT up to date) -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="16"
                    Padding="40,35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="400"
                    MaxWidth="500"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUpToDate}" Value="False">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.9" To="1" Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.9" To="1" Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Smooth fade-out and scale-out animation for UpdateAvailable dialog -->
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.95" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.95" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <!-- Collapse AFTER animation completes -->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Update Icon -->
                    <Border Background="{StaticResource SecondaryBrush}"
                            CornerRadius="50"
                            Width="80" Height="80"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">
                        <materialDesign:PackIcon Kind="Update"
                                                 Width="40" Height="40"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="{Binding Localization.Strings.UpdateAvailable}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- Subtitle -->
                    <TextBlock Text="{Binding Localization.Strings.NewVersionAvailable}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

                    <!-- Version Info Card -->
                    <Border Background="{StaticResource PrimaryBrush}"
                            CornerRadius="10"
                            Padding="20,15"
                            Margin="0,0,0,30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Current Version -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Localization.Strings.CurrentVersion}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="13"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding DisplayVersion}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="13"
                                       FontWeight="SemiBold"/>

                            <!-- Latest Version -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Localization.Strings.LatestVersion}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="13"
                                       Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding LatestVersion}"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Margin="0,8,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Dismiss Button -->
                        <Button Grid.Column="0"
                                Content="{Binding Localization.Strings.Dismiss}"
                                Command="{Binding DismissUpdateCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Padding="20,14"/>

                        <!-- Update Button -->
                        <Button Grid.Column="2"
                                Content="{Binding Localization.Strings.Update}"
                                Command="{Binding OpenUpdateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"
                                Padding="20,14"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Up To Date Card (when IS up to date) -->
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="16"
                    Padding="40,35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="380"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsUpToDate}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.9" To="1" Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.9" To="1" Duration="0:0:0.35">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.5"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Smooth fade-out and scale-out animation -->
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.95" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.95" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <!-- Collapse AFTER animation completes -->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Check Icon -->
                    <Border Background="{StaticResource SuccessBrush}"
                            CornerRadius="50"
                            Width="80" Height="80"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">
                        <materialDesign:PackIcon Kind="Check"
                                                 Width="45" Height="45"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="{Binding Localization.Strings.UpToDate}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- Subtitle -->
                    <TextBlock Text="{Binding Localization.Strings.YouHaveLatestVersion}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <!-- Version -->
                    <TextBlock Text="{Binding DisplayVersion}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="{StaticResource SecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- OK Button -->
                    <Button Content="{Binding Localization.Strings.Ok}"
                            Command="{Binding DismissUpdateCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Center"
                            MinWidth="150"
                            Padding="30,14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
