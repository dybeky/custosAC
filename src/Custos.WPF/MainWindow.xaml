<Window x:Class="Custos.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Custos.WPF.ViewModels"
        mc:Ignorable="d"
        Title="custos"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#0a0a0f"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{StaticResource MuseoSans}"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        RenderOptions.BitmapScalingMode="HighQuality"
        RenderOptions.ClearTypeHint="Enabled"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Grid>
        <!-- Animated Aurora Background - Green & Purple Flow -->
        <Grid ClipToBounds="True">
            <!-- Base dark background -->
            <Border Background="#0a0a0f"/>

            <!-- Blob 1 - Top Left - Large Green -->
            <Border x:Name="Blob1" Width="800" Height="800"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="-200,-200,0,0" Opacity="0.6">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop x:Name="Blob1Color" Color="#60b376" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="Blob1Transform"/>
                </Border.RenderTransform>
            </Border>

            <!-- Blob 2 - Bottom Right - Large Purple -->
            <Border x:Name="Blob2" Width="750" Height="750"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,-150,-150" Opacity="0.55">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop x:Name="Blob2Color" Color="#9c74db" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="Blob2Transform"/>
                </Border.RenderTransform>
            </Border>

            <!-- Blob 3 - Center - Mixed glow -->
            <Border x:Name="Blob3" Width="600" Height="600"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Opacity="0.5">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop x:Name="Blob3Color" Color="#7a94a8" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="Blob3Transform"/>
                </Border.RenderTransform>
            </Border>

            <!-- Blob 4 - Top Right - Purple accent -->
            <Border x:Name="Blob4" Width="500" Height="500"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,-100,-100,0" Opacity="0.45">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop x:Name="Blob4Color" Color="#9c74db" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="Blob4Transform"/>
                </Border.RenderTransform>
            </Border>

            <!-- Blob 5 - Bottom Left - Green accent -->
            <Border x:Name="Blob5" Width="450" Height="450"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    Margin="-80,0,0,-80" Opacity="0.45">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop x:Name="Blob5Color" Color="#60b376" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <TranslateTransform x:Name="Blob5Transform"/>
                </Border.RenderTransform>
            </Border>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <!-- Blob 1 movement - smooth flowing -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob1Transform" Storyboard.TargetProperty="X">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:6" Value="300">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:12" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob1Transform" Storyboard.TargetProperty="Y">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="250">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:10" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>

                            <!-- Blob 2 movement -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob2Transform" Storyboard.TargetProperty="X">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:7" Value="-280">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:14" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob2Transform" Storyboard.TargetProperty="Y">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:6" Value="-220">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:12" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>

                            <!-- Blob 3 movement - orbital center -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob3Transform" Storyboard.TargetProperty="X">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="150">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:8" Value="-150">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:12" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob3Transform" Storyboard.TargetProperty="Y">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="-130">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:10" Value="130">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:15" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>

                            <!-- Blob 4 movement -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob4Transform" Storyboard.TargetProperty="X">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="-200">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:10" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob4Transform" Storyboard.TargetProperty="Y">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:6" Value="180">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:12" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>

                            <!-- Blob 5 movement -->
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob5Transform" Storyboard.TargetProperty="X">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:8" Value="250">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:16" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Blob5Transform" Storyboard.TargetProperty="Y">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                                <EasingDoubleKeyFrame KeyTime="0:0:5" Value="-160">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                                <EasingDoubleKeyFrame KeyTime="0:0:10" Value="0">
                                    <EasingDoubleKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>

                            <!-- COLOR TRANSITIONS - Green & Purple Flow -->

                            <!-- Blob 1: Green -> Purple -> Green -->
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Blob1Color" Storyboard.TargetProperty="Color">
                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#60b376"/>
                                <EasingColorKeyFrame KeyTime="0:0:4" Value="#9c74db">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:8" Value="#60b376">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                            </ColorAnimationUsingKeyFrames>

                            <!-- Blob 2: Purple -> Green -> Purple -->
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Blob2Color" Storyboard.TargetProperty="Color">
                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#9c74db"/>
                                <EasingColorKeyFrame KeyTime="0:0:5" Value="#60b376">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:10" Value="#9c74db">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                            </ColorAnimationUsingKeyFrames>

                            <!-- Blob 3: Mix -> Green -> Purple -> Mix (blend effect) -->
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Blob3Color" Storyboard.TargetProperty="Color">
                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#7a94a8"/>
                                <EasingColorKeyFrame KeyTime="0:0:3" Value="#60b376">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:6" Value="#9c74db">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:9" Value="#7a94a8">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                            </ColorAnimationUsingKeyFrames>

                            <!-- Blob 4: Purple -> Mix -> Green -> Purple -->
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Blob4Color" Storyboard.TargetProperty="Color">
                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#9c74db"/>
                                <EasingColorKeyFrame KeyTime="0:0:3" Value="#7a94a8">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:6" Value="#60b376">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:9" Value="#9c74db">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                            </ColorAnimationUsingKeyFrames>

                            <!-- Blob 5: Green -> Mix -> Purple -> Green -->
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="Blob5Color" Storyboard.TargetProperty="Color">
                                <EasingColorKeyFrame KeyTime="0:0:0" Value="#60b376"/>
                                <EasingColorKeyFrame KeyTime="0:0:4" Value="#7a94a8">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:8" Value="#9c74db">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                                <EasingColorKeyFrame KeyTime="0:0:12" Value="#60b376">
                                    <EasingColorKeyFrame.EasingFunction><SineEase EasingMode="EaseInOut"/></EasingColorKeyFrame.EasingFunction>
                                </EasingColorKeyFrame>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>
        <!-- Main Content Container -->
        <Grid x:Name="MainContentContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Loading Overlay (covers all rows) -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="2" Panel.ZIndex="100"
              Background="{StaticResource BackgroundBrush}"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Spinning Circle -->
                <materialDesign:PackIcon Kind="Loading" Width="60" Height="60"
                                         Foreground="{StaticResource SecondaryBrush}"
                                         HorizontalAlignment="Center"
                                         RenderTransformOrigin="0.5,0.5">
                    <materialDesign:PackIcon.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate"/>
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                     Storyboard.TargetProperty="Angle"
                                                     From="0" To="360" Duration="0:0:1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </materialDesign:PackIcon.Triggers>
                </materialDesign:PackIcon>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <TextBlock Text="cus" FontSize="32" FontWeight="Bold"
                               Foreground="White"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text="tos" FontSize="32" FontWeight="Bold"
                               Foreground="#FF6B00"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                </StackPanel>

                <TextBlock Text="{Binding LoadingText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Header - Floating Panel with Gradient -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradientBrush}"
                CornerRadius="16" Margin="15,15,15,0" Padding="20,15"
                BorderBrush="#2A2A35" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="4" Opacity="0.4" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="cus" FontSize="26" FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text="tos" FontSize="26" FontWeight="Bold"
                               Foreground="#FF6B00"
                               VerticalAlignment="Center"
                               FontFamily="{StaticResource MuseoSansBold}"/>
                    <TextBlock Text=" - scanner" FontSize="14" FontWeight="Normal"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Version + Time -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Version Badge -->
                    <Border Background="#1A1A22" CornerRadius="8" Padding="12,6" Margin="0,0,10,0"
                            BorderBrush="#2A2A35" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Tag" Width="14" Height="14"
                                                     Foreground="{StaticResource SecondaryBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding DisplayVersion}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Time Badge -->
                    <Border Background="#1A1A22" CornerRadius="8" Padding="12,6"
                            BorderBrush="#2A2A35" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ClockOutline" Width="14" Height="14"
                                                     Foreground="{StaticResource SecondaryBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="{Binding CurrentTime}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Sidebar -->
        <Grid Grid.Row="1" Margin="15,15,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Floating Panel with Gradient -->
            <Border Grid.Column="0" Background="{StaticResource SidebarGradientBrush}"
                    CornerRadius="16" Width="70"
                    BorderBrush="#2A2A35" BorderThickness="1"
                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.35" Direction="0"/>
                </Border.Effect>
                <StackPanel VerticalAlignment="Top" Margin="0,15,0,0">
                    <!-- Home/Dashboard -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToDashboardCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Dashboard}"
                            ToolTip="Home">
                        <materialDesign:PackIcon Kind="Home" Width="24" Height="24"/>
                    </Button>

                    <!-- Manual Check -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToManualCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Manual}"
                            ToolTip="Manual Check">
                        <materialDesign:PackIcon Kind="Eye" Width="24" Height="24"/>
                    </Button>

                    <!-- Scan (also selected when showing Results) -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToScanCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter='Scan|Results'}"
                            ToolTip="Scan">
                        <materialDesign:PackIcon Kind="Radar" Width="24" Height="24"/>
                    </Button>

                    <!-- Utilities -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToUtilitiesCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Utilities}"
                            ToolTip="Utilities">
                        <materialDesign:PackIcon Kind="Toolbox" Width="24" Height="24"/>
                    </Button>

                    <!-- Separator -->
                    <Border Height="1" Background="#333333" Margin="12,15"/>

                    <!-- Settings -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding NavigateToSettingsCommand}"
                            Tag="{Binding CurrentNavigation, Converter={StaticResource StringEqualsConverter}, ConverterParameter=Settings}"
                            ToolTip="Settings">
                        <materialDesign:PackIcon Kind="Cog" Width="24" Height="24"/>
                    </Button>

                    <!-- Update Check -->
                    <Button Style="{StaticResource SidebarButtonStyle}"
                            Command="{Binding CheckUpdateCommand}"
                            ToolTip="Check Updates"
                            IsEnabled="{Binding IsCheckingUpdate, Converter={StaticResource InverseBooleanConverter}}">
                        <Grid>
                            <!-- Normal icon -->
                            <materialDesign:PackIcon Kind="Update" Width="24" Height="24"
                                                     Visibility="{Binding IsCheckingUpdate, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                            <!-- Spinning icon when checking -->
                            <materialDesign:PackIcon Kind="Loading" Width="24" Height="24"
                                                     Visibility="{Binding IsCheckingUpdate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                     RenderTransformOrigin="0.5,0.5">
                                <materialDesign:PackIcon.RenderTransform>
                                    <RotateTransform x:Name="UpdateSpinnerRotate"/>
                                </materialDesign:PackIcon.RenderTransform>
                                <materialDesign:PackIcon.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="UpdateSpinnerRotate"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360" Duration="0:0:1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </materialDesign:PackIcon.Triggers>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Area - Floating Panel with Gradient -->
            <Border Grid.Column="2"
                    CornerRadius="16"
                    Background="{StaticResource SurfaceGradientBrush}"
                    BorderBrush="#2A2A35" BorderThickness="1"
                    Padding="25"
                    ClipToBounds="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="5" Opacity="0.4" Direction="270"/>
                </Border.Effect>
                <ContentControl Content="{Binding CurrentView, NotifyOnTargetUpdated=True}"
                                x:Name="MainContentControl"/>
            </Border>
        </Grid>

        <!-- Update Overlay (no blur on dialog itself) -->
        <Grid x:Name="UpdateOverlay" Grid.RowSpan="2" Panel.ZIndex="200"
              Visibility="Collapsed">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowUpdateOverlay}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard Name="OverlayShowStoryboard">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.2" BeginTime="0:0:0.05">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Smooth fade-out animation for overlay background -->
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <!-- Collapse AFTER animation completes -->
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Blurred/Darkened Background with gradient -->
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#E6000000" Offset="0"/>
                        <GradientStop Color="#CC0a0a12" Offset="0.5"/>
                        <GradientStop Color="#E6000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Cards Container - only active when ShowUpdateOverlay is True -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ShowUpdateOverlay}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

            <!-- Update Available Card (when NOT up to date) -->
            <Border CornerRadius="20"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="420"
                    MaxWidth="520"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1E28" Offset="0"/>
                        <GradientStop Color="#252532" Offset="0.5"/>
                        <GradientStop Color="#1E1E28" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <!-- MultiDataTrigger ensures animations fire when overlay opens/closes -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowUpdateOverlay}" Value="True"/>
                                    <Condition Binding="{Binding IsUpToDate}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.EnterActions>
                                    <BeginStoryboard Name="UpdateAvailableCardShowStoryboard">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.85" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.85" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.2" BeginTime="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.EnterActions>
                                <MultiDataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="UpdateAvailableCardShowStoryboard"/>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.9" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.9" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.ExitActions>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="#FF6B00" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <!-- Accent glow line at top -->
                    <Border Height="3" VerticalAlignment="Top" CornerRadius="20,20,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FF6B00" Offset="0"/>
                                <GradientStop Color="#FF8C00" Offset="0.5"/>
                                <GradientStop Color="#FF6B00" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <StackPanel Margin="45,40,45,40">
                        <!-- Animated Update Icon -->
                        <Border Width="90" Height="90"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,25"
                                CornerRadius="45">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF7A1A" Offset="0"/>
                                    <GradientStop Color="#FF5500" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#FF6B00" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <materialDesign:PackIcon Kind="Download"
                                                     Width="45" Height="45"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- Title with gradient effect simulation -->
                        <TextBlock Text="{Binding Localization.Strings.UpdateAvailable}"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource MuseoSansBold}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>

                        <!-- Subtitle -->
                        <TextBlock Text="{Binding Localization.Strings.NewVersionAvailable}"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Version comparison with visual indicator -->
                        <Border CornerRadius="12" Padding="20,18" Margin="0,0,0,30"
                                BorderBrush="#3A3A45" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1A22" Offset="0"/>
                                    <GradientStop Color="#222230" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Current Version -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Localization.Strings.CurrentVersion}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding DisplayVersion}"
                                               Foreground="#888888"
                                               FontSize="18" FontWeight="Bold"
                                               FontFamily="{StaticResource MuseoSansBold}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Arrow -->
                                <materialDesign:PackIcon Grid.Column="1" Kind="ArrowRight"
                                                         Width="24" Height="24"
                                                         Foreground="{StaticResource SecondaryBrush}"
                                                         VerticalAlignment="Center"
                                                         Margin="15,0"/>

                                <!-- New Version -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Localization.Strings.LatestVersion}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding LatestVersion}"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               FontSize="18" FontWeight="Bold"
                                               FontFamily="{StaticResource MuseoSansBold}"
                                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Content="{Binding Localization.Strings.Dismiss}"
                                    Command="{Binding DismissUpdateCommand}"
                                    Style="{StaticResource OutlinedButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Padding="20,14"/>

                            <Button Grid.Column="2"
                                    Content="{Binding Localization.Strings.Update}"
                                    Command="{Binding OpenUpdateCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Padding="20,14"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Up To Date Card (when IS up to date) -->
            <Border CornerRadius="20"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="400"
                    RenderTransformOrigin="0.5,0.5"
                    Visibility="Collapsed">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E1E28" Offset="0"/>
                        <GradientStop Color="#252532" Offset="0.5"/>
                        <GradientStop Color="#1E1E28" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0"/>
                        <Style.Triggers>
                            <!-- MultiDataTrigger ensures animations fire when overlay opens/closes -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding ShowUpdateOverlay}" Value="True"/>
                                    <Condition Binding="{Binding IsUpToDate}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.EnterActions>
                                    <BeginStoryboard Name="UpToDateCardShowStoryboard">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="0.85" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="0.85" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.2" BeginTime="0:0:0.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.EnterActions>
                                <MultiDataTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="UpToDateCardShowStoryboard"/>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="0.9" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="0.9" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.2">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiDataTrigger.ExitActions>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect Color="#22C55E" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <!-- Green accent line at top -->
                    <Border Height="3" VerticalAlignment="Top" CornerRadius="20,20,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#22C55E" Offset="0"/>
                                <GradientStop Color="#4ADE80" Offset="0.5"/>
                                <GradientStop Color="#22C55E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <StackPanel Margin="45,40,45,40">
                        <!-- Success Icon with glow -->
                        <Border Width="90" Height="90"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,25"
                                CornerRadius="45">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#22C55E" Offset="0"/>
                                    <GradientStop Color="#16A34A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#22C55E" BlurRadius="25" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <materialDesign:PackIcon Kind="Check"
                                                     Width="50" Height="50"
                                                     Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- Title -->
                        <TextBlock Text="{Binding Localization.Strings.UpToDate}"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource MuseoSansBold}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>

                        <!-- Subtitle -->
                        <TextBlock Text="{Binding Localization.Strings.YouHaveLatestVersion}"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- Version badge -->
                        <Border CornerRadius="20" Padding="20,10" HorizontalAlignment="Center" Margin="0,0,0,30"
                                BorderBrush="#3A3A45" BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1A22" Offset="0"/>
                                    <GradientStop Color="#222230" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Tag" Width="18" Height="18"
                                                         Foreground="{StaticResource SecondaryBrush}"
                                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding DisplayVersion}"
                                           FontSize="16" FontWeight="Bold"
                                           FontFamily="{StaticResource MuseoSansBold}"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- OK Button -->
                        <Button Content="{Binding Localization.Strings.Ok}"
                                Command="{Binding DismissUpdateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Center"
                                MinWidth="150"
                                Padding="30,14"/>
                    </StackPanel>
                </Grid>
            </Border>
            </Grid><!-- End Cards Container -->
        </Grid>
    </Grid>
    </Grid>
</Window>
