<Window x:Class="Custos.WPF.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="custos"
        Width="450" Height="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        FontFamily="{StaticResource MuseoSans}">

    <Window.Resources>
        <!-- Pulse animation for logo glow -->
        <Storyboard x:Key="LogoPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LogoGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="0.7" Duration="0:0:1.5"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Indeterminate progress animation -->
        <Storyboard x:Key="IndeterminateProgress" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="IndeterminateIndicator"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                             From="-150" To="450" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource LogoPulse}"/>
        </EventTrigger>
    </Window.Triggers>

    <!-- Main Container -->
    <Border CornerRadius="20" Background="#0D0D0D"
            BorderBrush="#2A2A2A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30"
                              ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <!-- Gradient overlay -->
            <Border CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0D0D0D" Offset="0"/>
                        <GradientStop Color="#12121A" Offset="0.5"/>
                        <GradientStop Color="#0D0D0D" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Content -->
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center"
                            HorizontalAlignment="Center">

                    <!-- Logo with glow -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- Glow effect -->
                        <Ellipse x:Name="LogoGlow"
                                 Width="100" Height="100"
                                 Opacity="0.3">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FF6B00" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Icon -->
                        <materialDesign:PackIcon Kind="ShieldSearch"
                                                 Width="50" Height="50"
                                                 Foreground="{StaticResource SecondaryBrush}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- App Name -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="cus" FontSize="36" FontWeight="Bold"
                                   Foreground="White"
                                   FontFamily="{StaticResource MuseoSansBold}"/>
                        <TextBlock Text="tos" FontSize="36" FontWeight="Bold"
                                   Foreground="#FF6B00"
                                   FontFamily="{StaticResource MuseoSansBold}"/>
                    </StackPanel>

                    <!-- Version -->
                    <TextBlock Text="{Binding CurrentVersion}"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Progress Section (Normal loading) -->
                <StackPanel Grid.Row="1"
                            Visibility="{Binding ShowUpdatePanel, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

                    <!-- Progress Bar Container -->
                    <Grid Height="4" Margin="0,0,0,15">
                        <!-- Determinate progress -->
                        <Border Background="#2A2A2A" CornerRadius="2"
                                Visibility="{Binding IsIndeterminate, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        <Border HorizontalAlignment="Left" CornerRadius="2"
                                Visibility="{Binding IsIndeterminate, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                    <Binding Path="Progress"/>
                                    <Binding RelativeSource="{RelativeSource AncestorType=Grid}" Path="ActualWidth"/>
                                </MultiBinding>
                            </Border.Width>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FF6B00" Offset="0"/>
                                    <GradientStop Color="#FF8C00" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Indeterminate progress -->
                        <Grid Visibility="{Binding IsIndeterminate, Converter={StaticResource BooleanToVisibilityConverter}}"
                              ClipToBounds="True">
                            <Border Background="#2A2A2A" CornerRadius="2"/>
                            <Border x:Name="IndeterminateIndicator"
                                    Width="150" HorizontalAlignment="Left"
                                    CornerRadius="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#FF6B00" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.RenderTransform>
                                    <TranslateTransform X="-150"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Status Text -->
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Update Panel -->
                <StackPanel Grid.Row="1"
                            Visibility="{Binding ShowUpdatePanel, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <!-- Update Badge -->
                    <Border CornerRadius="12" Padding="15,10"
                            HorizontalAlignment="Center" Margin="0,0,0,20"
                            BorderBrush="#333" BorderThickness="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1A1A22" Offset="0"/>
                                <GradientStop Color="#222230" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Download"
                                                     Width="20" Height="20"
                                                     Foreground="{StaticResource SecondaryBrush}"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Localization.Strings.UpdateAvailable}"
                                           FontSize="14" FontWeight="SemiBold"
                                           Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="{Binding CurrentVersion}"
                                               FontSize="11"
                                               Foreground="#666"/>
                                    <TextBlock Text=" -> "
                                               FontSize="11"
                                               Foreground="#666"/>
                                    <TextBlock Text="{Binding LatestVersion}"
                                               FontSize="11"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Buttons -->
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="{Binding Localization.Strings.Skip}"
                                Command="{Binding SkipUpdateCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                MinWidth="100"
                                Padding="20,10"/>

                        <Button Grid.Column="2"
                                Content="{Binding Localization.Strings.Update}"
                                Command="{Binding OpenUpdateCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                MinWidth="100"
                                Padding="20,10"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Accent line at top -->
            <Border Height="3" VerticalAlignment="Top"
                    CornerRadius="20,20,0,0"
                    Margin="1,1,1,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#FF6B00" Offset="0"/>
                        <GradientStop Color="#FF8C00" Offset="0.5"/>
                        <GradientStop Color="#FF6B00" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Grid>
    </Border>
</Window>
