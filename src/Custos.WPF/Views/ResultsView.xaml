<UserControl x:Class="Custos.WPF.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Header -->
        <Border Grid.Row="0" Margin="20,20,20,15" Padding="25" CornerRadius="12">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasThreats}" Value="True">
                            <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Icon -->
                <materialDesign:PackIcon Grid.Column="0" Width="48" Height="48"
                                         VerticalAlignment="Center" Margin="0,0,20,0">
                    <materialDesign:PackIcon.Style>
                        <Style TargetType="materialDesign:PackIcon">
                            <Setter Property="Kind" Value="CheckCircle"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasThreats}" Value="True">
                                    <Setter Property="Kind" Value="AlertCircle"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:PackIcon.Style>
                </materialDesign:PackIcon>

                <!-- Status Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="24" FontWeight="Bold"
                               FontFamily="{StaticResource MuseoSansBold}"
                               Foreground="White"/>
                    <TextBlock Foreground="White" Opacity="0.9" FontSize="13">
                        <Run Text="{Binding TotalFindings, Mode=OneWay}"/>
                        <Run Text="findings in"/>
                        <Run Text="{Binding ScanDuration, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>

                <!-- New Scan Button (in header) -->
                <Button Grid.Column="2"
                        Content="NEW SCAN"
                        Command="{Binding NewScanCommand}"
                        Background="White"
                        Foreground="{StaticResource ErrorBrush}"
                        FontWeight="Bold"
                        Padding="20,10"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="White"
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Results Content -->
        <Grid Grid.Row="1">
            <!-- No threats message -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding HasThreats, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <materialDesign:PackIcon Kind="ShieldCheck" Width="80" Height="80"
                                         Foreground="{StaticResource SuccessBrush}"
                                         HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="No threats found"
                           FontSize="24" FontWeight="Bold"
                           FontFamily="{StaticResource MuseoSansBold}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Your system appears to be clean"
                           Style="{StaticResource SubtitleStyle}"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Findings list -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,0"
                          Visibility="{Binding HasThreats, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding Categories}"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Category Card -->
                            <Border Background="{StaticResource CardBrush}"
                                    CornerRadius="8" Margin="0,0,0,12" Padding="0">
                                <Expander IsExpanded="{Binding IsExpanded}"
                                          Background="Transparent"
                                          BorderThickness="0">
                                    <Expander.Header>
                                        <Grid Margin="5,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Category Icon -->
                                            <Border Grid.Column="0" Width="36" Height="36"
                                                    CornerRadius="18" Margin="0,0,15,0"
                                                    Background="{StaticResource ErrorBrush}">
                                                <materialDesign:PackIcon Kind="AlertCircle"
                                                                         Width="20" Height="20"
                                                                         Foreground="White"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Category Name -->
                                            <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                       FontSize="16" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       VerticalAlignment="Center"/>

                                            <!-- Count Badge -->
                                            <Border Grid.Column="2" CornerRadius="12" Padding="12,5"
                                                    Background="{StaticResource ErrorBrush}"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FindingsCount, StringFormat='{}{0} found'}"
                                                           FontWeight="Bold" Foreground="White" FontSize="12"/>
                                            </Border>
                                        </Grid>
                                    </Expander.Header>

                                    <!-- Findings List -->
                                    <ItemsControl ItemsSource="{Binding Findings}" Margin="15,5,15,15"
                                                  VirtualizingPanel.IsVirtualizing="True"
                                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                                  MaxHeight="400">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.Template>
                                            <ControlTemplate TargetType="ItemsControl">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                              HorizontalScrollBarVisibility="Disabled">
                                                    <ItemsPresenter/>
                                                </ScrollViewer>
                                            </ControlTemplate>
                                        </ItemsControl.Template>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource BackgroundBrush}"
                                                        CornerRadius="6" Padding="12" Margin="0,0,0,6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Finding Path (Selectable) -->
                                                        <TextBox Grid.Column="0" Text="{Binding Path, Mode=OneWay}"
                                                                 Foreground="{StaticResource TextSecondaryBrush}"
                                                                 Background="Transparent"
                                                                 BorderThickness="0"
                                                                 IsReadOnly="True"
                                                                 TextWrapping="Wrap"
                                                                 FontFamily="Consolas"
                                                                 FontSize="12"
                                                                 VerticalAlignment="Center"
                                                                 Cursor="IBeam"/>

                                                        <!-- Open Folder Button -->
                                                        <Button Grid.Column="1"
                                                                Command="{Binding OpenFolderCommand}"
                                                                ToolTip="Open in Explorer"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="8"
                                                                Margin="10,0,0,0"
                                                                Cursor="Hand"
                                                                VerticalAlignment="Center">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border x:Name="border"
                                                                                        Background="#252525"
                                                                                        CornerRadius="4"
                                                                                        Padding="8">
                                                                                    <materialDesign:PackIcon x:Name="icon"
                                                                                                             Kind="FolderOpen"
                                                                                                             Width="16" Height="16"
                                                                                                             Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                                                                        <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="{StaticResource CardBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Export Button -->
                <Button Grid.Column="0" Content="EXPORT TXT"
                        Command="{Binding ExportTextCommand}"
                        Style="{StaticResource OutlinedButtonStyle}"
                        HorizontalAlignment="Left"
                        Width="140"/>

                <!-- Scan Info -->
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Style="{StaticResource SubtitleStyle}">
                    <Run Text="Scan completed in"/>
                    <Run Text="{Binding ScanDuration, Mode=OneWay}" Foreground="{StaticResource SecondaryBrush}"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
