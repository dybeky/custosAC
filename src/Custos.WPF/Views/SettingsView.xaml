<UserControl x:Class="Custos.WPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="{Binding Localization.Strings.Settings}"
                       FontSize="28" FontWeight="Bold"
                       FontFamily="{StaticResource MuseoSansBold}"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding Localization.Strings.SettingsSubtitle}"
                       Style="{StaticResource SubtitleStyle}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Language Section -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{Binding Localization.Strings.Language}"
                                       FontSize="15"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="{Binding Localization.Strings.LanguageDesc}"
                                       Style="{StaticResource SubtitleStyle}"
                                       FontSize="12"/>
                        </StackPanel>
                        <ComboBox Grid.Column="1"
                                  SelectedIndex="{Binding SelectedLanguageIndex}"
                                  Width="80"
                                  VerticalAlignment="Center"
                                  Background="{StaticResource PrimaryBrush}"
                                  Foreground="{StaticResource TextPrimaryBrush}">
                            <ComboBoxItem Content="EN"/>
                            <ComboBoxItem Content="RU"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Updates Section -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="{Binding Localization.Strings.Updates}"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <!-- Manual check button -->
                        <Button Content="{Binding Localization.Strings.CheckForUpdates}"
                                Command="{Binding CheckForUpdatesCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="{Binding Localization.Strings.About}"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryBrush}"
                                   Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Localization.Strings.Version}"
                                       Style="{StaticResource SubtitleStyle}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CurrentVersion}"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Localization.Strings.Developer}"
                                       Style="{StaticResource SubtitleStyle}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="COBRA"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>

                        <Button Content="{Binding Localization.Strings.ViewOnGitHub}"
                                Command="{Binding OpenGitHubCommand}"
                                Style="{StaticResource OutlinedButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Danger Zone -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20"
                        BorderBrush="{StaticResource ErrorBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{Binding Localization.Strings.DangerZone}"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ErrorBrush}"
                                   Margin="0,0,0,15"/>

                        <!-- Delete after use -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding Localization.Strings.DeleteAfterUse}"
                                           FontSize="15"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="{Binding Localization.Strings.DeleteAfterUseDesc}"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                            <ToggleButton Grid.Column="1"
                                          Style="{StaticResource MinimalToggleStyle}"
                                          IsChecked="{Binding DeleteAfterUse}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <Button Content="{Binding Localization.Strings.DeleteProgramNow}"
                                Command="{Binding DeleteProgramCommand}"
                                Style="{StaticResource CancelButtonStyle}"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Back Button -->
        <Button Grid.Row="2"
                Content="{Binding Localization.Strings.Back}"
                Command="{Binding GoBackCommand}"
                Style="{StaticResource OutlinedButtonStyle}"
                HorizontalAlignment="Left"
                Margin="0,20,0,0"/>
    </Grid>
</UserControl>
