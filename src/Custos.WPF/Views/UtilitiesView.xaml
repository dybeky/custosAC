<UserControl x:Class="Custos.WPF.Views.UtilitiesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="{Binding Localization.Strings.Utilities}"
                       FontSize="28" FontWeight="Bold"
                       FontFamily="{StaticResource MuseoSansBold}"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding Localization.Strings.UtilitiesSubtitle}"
                       Style="{StaticResource SubtitleStyle}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Utilities Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Orientation="Horizontal">

                <!-- LastActivityView -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,15,15"
                        Width="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" CornerRadius="8"
                                    Background="{StaticResource SecondaryBrush}" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="History" Width="24" Height="24"
                                                         Foreground="White"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="LastActivityView"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="NirSoft"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1" TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13" Margin="0,0,0,15"
                                   Text="{Binding Localization.Strings.LastActivityViewDesc}"/>

                        <!-- Button -->
                        <Button Grid.Row="2" Content="{Binding Localization.Strings.OpenWebsite}"
                                Command="{Binding OpenLastActivityViewCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>

                <!-- USB Deview -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,15,15"
                        Width="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" CornerRadius="8"
                                    Background="{StaticResource SecondaryBrush}" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Usb" Width="24" Height="24"
                                                         Foreground="White"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="USB Deview"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="NirSoft"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1" TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13" Margin="0,0,0,15"
                                   Text="{Binding Localization.Strings.UsbDeviewDesc}"/>

                        <!-- Button -->
                        <Button Grid.Row="2" Content="{Binding Localization.Strings.OpenWebsite}"
                                Command="{Binding OpenUsbDeviewCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>

                <!-- Everything -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,15,15"
                        Width="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" CornerRadius="8"
                                    Background="{StaticResource SecondaryBrush}" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24"
                                                         Foreground="White"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Everything"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="voidtools"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1" TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13" Margin="0,0,0,15"
                                   Text="{Binding Localization.Strings.EverythingDesc}"/>

                        <!-- Button -->
                        <Button Grid.Row="2" Content="{Binding Localization.Strings.OpenWebsite}"
                                Command="{Binding OpenEverythingCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>

                <!-- System Informer -->
                <Border Background="{StaticResource CardBrush}"
                        CornerRadius="12" Padding="20" Margin="0,0,15,15"
                        Width="280">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Icon and Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="40" Height="40" CornerRadius="8"
                                    Background="{StaticResource SecondaryBrush}" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="MonitorEye" Width="24" Height="24"
                                                         Foreground="White"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="System Informer"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="SourceForge"
                                           Style="{StaticResource SubtitleStyle}"
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1" TextWrapping="Wrap"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13" Margin="0,0,0,15"
                                   Text="{Binding Localization.Strings.SystemInformerDesc}"/>

                        <!-- Button -->
                        <Button Grid.Row="2" Content="{Binding Localization.Strings.OpenWebsite}"
                                Command="{Binding OpenSystemInformerCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                    </Grid>
                </Border>

            </WrapPanel>
        </ScrollViewer>

        <!-- Status Message -->
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}"
                   Style="{StaticResource SubtitleStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"/>
    </Grid>
</UserControl>
